---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ pv_name }}
  labels:
    type: ebs
spec:
  capacity:
    storage: {{ vol_size }}Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Recycle
  awsElasticBlockStore:
    volumeID: aws://{{ vol_az }}/{{ vol_id }}
    fsType: ext4
