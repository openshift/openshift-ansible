[req]
prompt = no
distinguished_name = req_distinguished_name

default_md = sha256

[req_distinguished_name]
CN=apiserver.kube-service-catalog

[req_ext]
subjectAltName = @alt_names
basicConstraints=critical,CA:FALSE
keyUsage=critical,digitalSignature, keyEncipherment
extendedKeyUsage=serverAuth

[alt_names]
{% for dns in [ 'apiserver.kube-service-catalog', 'apiserver.kube-service-catalog.svc', 'apiserver.kube-service-catalog.svc.cluster.local' ] %}
DNS.{{ loop.index }} = {{ dns }}
{% endfor %}
