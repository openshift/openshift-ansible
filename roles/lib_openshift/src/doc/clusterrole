EXAMPLES = '''
- name: query a list of env vars on dc
  oc_clusterrole:
    name: myclusterrole
    state: list

- name: Set the following variables.
  oc_clusterrole:
    name: myclusterrole
    rules:
      apiGroups:
      - ""
      attributeRestrictions: null
      verbs: []
      resources: []
