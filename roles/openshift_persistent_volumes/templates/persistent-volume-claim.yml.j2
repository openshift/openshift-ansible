---
apiVersion: "v1"
kind: "List"
items:
{% for claim in persistent_volume_claims %}
- kind: "PersistentVolumeClaim"
  metadata:
    name: "{{ claim.name }}"
  spec:
    accessModes: {{ claim.access_modes | to_padded_yaml(2, 2) }}
    resources:
      requests:
        storage: "{{ claim.capacity }}"
{% endfor %}
