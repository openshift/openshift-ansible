---
vm_prefix: "ci_test"

type: aws
aws_user: "ec2-user"
python: "/usr/bin/python"

aws_key: "libra"
aws_region: "us-east-1"
aws_cluster_id: "ci"
# us-east-1d
aws_subnet: "subnet-cf57c596"

aws_ami_tags:
  "tag:operating_system": "rhel"
  "tag:image_stage": "base"
  "tag:ready": "yes"

aws_instances:
- name: "{{ vm_prefix }}-master"
  ansible_groups:
    - masters
    - etcd
    - nodes
  aws_flavor: t2.large
  aws_security_group: public
  node_group: "node-config-all-in-one"
  # Use custom AMI tags
  # aws_ami_tags:
  #   operating_system: "rhel"
  #   image_stage: "base"
  #   ready: "yes"
  # Use custom AMI
  #aws_image: "ami-70e8fd66"
